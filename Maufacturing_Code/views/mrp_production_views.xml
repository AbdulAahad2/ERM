<odoo>
    <record id="mrp_production_form_view_inherit_lot" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit.lot</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">

            <!-- Keep the Generate Button inline after lot_producing_id -->
            <xpath expr="//field[@name='lot_producing_id']" position="after">
                <button name="action_generate_custom_mfg_lot"
                        string="+"
                        type="object"
                        class="btn btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
