<odoo>
    <record id="product_template_form_view_inherit_lot" model="ir.ui.view">
        <field name="name">product.template.form.inherit.lot</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="manuf_lot_code" invisible="tracking == 'none'" placeholder="e.g. PROD-A"/>
            </xpath>
        </field>
    </record>
</odoo>