<odoo>
    <record id="action_requisition_draft" model="ir.actions.act_window">
    <field name="name">Draft Requisitions</field>
    <field name="res_model">employee.requisition</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('state','=','draft')]</field>
</record>

    <record id="action_requisition_manager" model="ir.actions.act_window">
    <field name="name">Manager Approval</field>
    <field name="res_model">employee.requisition</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('state','=','manager_approval')]</field>
</record>
<record id="action_requisition_done" model="ir.actions.act_window">
    <field name="name">Completed Requisitions</field>
    <field name="res_model">employee.requisition</field>
    <field name="view_mode">list,form</field>
    <field name="domain">[('state','=','done')]</field>
</record>

</odoo>