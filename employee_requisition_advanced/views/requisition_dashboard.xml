<odoo>
    <record id="view_requisition_kanban_dashboard" model="ir.ui.view">
    <field name="name">employee.requisition.kanban.dashboard</field>
    <field name="model">employee.requisition</field>
    <field name="arch" type="xml">
        <kanban class="o_kanban_dashboard"
                create="true"
                sample="1"
                default_group_by="state"
                records_draggable="true">
            <field name="state"/>
            <field name="total_amount"/>
            <field name="can_approve"/>
            <field name="employee_id"/>
            <field name="department_id"/>
            <field name="currency_id"/>
            <field name="name"/>
            <field name="activity_ids"/>
            <field name="activity_state"/>
            <templates>
                <t t-name="kanban-box">
                    <div t-attf-class="oe_kanban_global_click o_kanban_card p-0 shadow-sm border-0 mb-3">

                        <div t-attf-class="p-1 mb-0 #{record.state.raw_value == 'approved' ? 'bg-success' : (record.state.raw_value == 'cancel' ? 'bg-danger' : 'bg-primary')}"
                             style="opacity: 0.8;"/>

                        <div class="p-3">
                            <div class="o_kanban_record_top mb-2 d-flex justify-content-between align-items-start">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title fs-5" style="color: #1a252f;">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted d-flex align-items-center gap-1 small mt-1">
                                        <i class="oi oi-view-list" title="Ref"/>
                                        <field name="department_id"/>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <field name="currency_id" invisible="1"/>
                                    <span class="badge rounded-pill text-bg-light border px-3 py-2 fs-6">
                                        <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </span>
                                </div>
                            </div>

                            <div class="row g-0 mt-3 pb-3 border-bottom">
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <field name="employee_id" widget="many2one_avatar_user" class="me-2"/>
                                        <div class="overflow-hidden">
                                            <div class="text-truncate small text-muted">Requested By</div>
                                            <div class="fw-bold text-truncate"><field name="employee_id"/></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6 ps-2 border-start">
                                    <div class="text-truncate small text-muted ps-2">Current Status</div>
                                    <div class="ps-2">
                                        <field name="state" widget="label_selection"
                                               options="{'classes': {'draft': 'info', 'manager_approval': 'warning', 'approved': 'success', 'cancel': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>

                            <div class="o_kanban_record_bottom mt-3 pt-2 d-flex justify-content-between align-items-center">
                                <div class="oe_kanban_bottom_left">
                                    <field name="activity_ids" widget="kanban_activity"/>
                                </div>
                                <div class="oe_kanban_bottom_right d-flex gap-2">
                                    <button name="action_submit" type="object"
                                            class="btn btn-outline-primary btn-sm fw-bold px-3"
                                            invisible="state != 'draft'">
                                        Submit Request
                                    </button>

                                    <button name="action_approve" type="object"
                                            class="btn btn-success btn-sm fw-bold px-3 shadow-sm"
                                            invisible="not can_approve or state not in ('manager_approval', 'cfo_approval', 'ceo_approval')">
                                        <i class="fa fa-check-circle me-1"/> Approve
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

    <record id="action_employee_requisition_dashboard" model="ir.actions.act_window">
        <field name="name">Requisition Dashboard</field>
        <field name="res_model">employee.requisition</field>
        <field name="view_mode">kanban,list,form,pivot,graph,activity</field>
        <field name="view_id" ref="view_requisition_kanban_dashboard"/>
        <field name="context">{'search_default_group_by_state': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Welcome to your Requisition Dashboard!
            </p>
            <p>Track all employee requests from draft to final purchase order here.</p>
        </field>
    </record>

    <record id="action_my_approvals" model="ir.actions.act_window">
        <field name="name">Pending My Approval</field>
        <field name="res_model">employee.requisition</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="domain">[('can_approve', '=', True)]</field>
    </record>

    <record id="action_team_requisitions" model="ir.actions.act_window">
        <field name="name">Team Requisitions</field>
        <field name="res_model">employee.requisition</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('employee_id.parent_id.user_id', '=', uid)]</field>
    </record>

    <record id="action_all_requisitions" model="ir.actions.act_window">
        <field name="name">All Requisitions</field>
        <field name="res_model">employee.requisition</field>
        <field name="view_mode">list,kanban,form,pivot,graph</field>
    </record>

    <record id="action_requisition_analytics" model="ir.actions.act_window">
        <field name="name">Requisition Analytics</field>
        <field name="res_model">employee.requisition</field>
        <field name="view_mode">graph,pivot</field>
    </record>

    <menuitem id="menu_requisition_root"
              name="Employee Requisition"
              web_icon="employee_requisition_advanced,static/description/icon.png"
              sequence="10"/>

    <menuitem id="menu_dashboard"
              name="Dashboard"
              parent="menu_requisition_root"
              action="action_employee_requisition_dashboard"
              sequence="1"/>

    <menuitem id="menu_my_work"
              name="My Work"
              parent="menu_requisition_root"
              sequence="10"/>



    <menuitem id="menu_my_approvals"
              name="Pending My Approval"
              parent="menu_my_work"
              action="action_my_approvals"
              sequence="2"/>

    <menuitem id="menu_management"
              name="Management"
              parent="menu_requisition_root"
              sequence="20"/>

    <menuitem id="menu_team_requisitions"
              name="Team Requisitions"
              parent="menu_management"
              action="action_team_requisitions"
              sequence="1"/>

    <menuitem id="menu_all_requisitions"
              name="All Requisitions"
              parent="menu_management"
              action="action_all_requisitions"
              sequence="2"
              groups="base.group_system"/>

    <menuitem id="menu_analytics"
              name="Reports"
              parent="menu_requisition_root"
              sequence="30"/>

    <menuitem id="menu_requisition_print_wizard"
              name="Print"
              parent="menu_analytics"
              action="action_requisition_report_wizard"
              sequence="1"/>

    <menuitem id="menu_requisition_analytics"
              name="Analytics"
              parent="menu_analytics"
              action="action_requisition_analytics"
              sequence="2"/>
</odoo>