<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Requisition Report Wizard Form View -->
    <record id="view_requisition_report_wizard_form" model="ir.ui.view">
        <field name="name">requisition.report.wizard.form</field>
        <field name="model">requisition.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Print Requisition Report">
                <group>
                    <group>
                        <field name="employee_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button string="Print Report" name="action_print_report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_requisition_report_wizard" model="ir.actions.act_window">
        <field name="name">Print Requisition Report</field>
        <field name="res_model">requisition.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>