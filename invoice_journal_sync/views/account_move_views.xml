<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_pkr_inherit" model="ir.ui.view">
        <field name="name">account.move.form.pkr.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_totals']" position="after">
                <field name="amount_untaxed_pkr"
                invisible="currency_id == company_currency_id"/>
                <field name="amount_tax_pkr"
                       invisible="currency_id == company_currency_id"
                       readonly="1"/>
                <field name="amount_total_pkr"
                       invisible="currency_id == company_currency_id"
                       readonly="1"
                       decoration-bf="1"/>
            </xpath>
            <xpath expr="//field[@name='amount_residual']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='amount_residual']" position="after">
                <tr style="border-top: 1px solid #dee2e6;">
                    <td class="o_td_label" style="padding-top: 10px;">
                        <label for="amount_residual_pkr" style="font-weight: bold;"/>
                    </td>
                    <td style="padding-top: 10px; min-width: 100px;">
                        <field name="amount_residual_pkr"
                               nolabel="1"
                               style="font-weight: bold;"/>
                    </td>
                </tr>
            </xpath>
        </field>
    </record>
</odoo>