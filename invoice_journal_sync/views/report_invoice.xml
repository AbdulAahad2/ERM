<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_pkr" inherit_id="account.report_invoice_document">
        <xpath expr="//t[@t-call='account.document_tax_totals_company_currency_template']" position="replace"/>

        <xpath expr="//div[@id='total']" position="after">
            <t t-if="o.currency_id.name == 'USD'">
                <div class="row mt-3">
                    <div class="col-6 ms-auto">
                        <table class="table table-sm" style="page-break-inside: avoid; border: 1px solid black;">
                            <tr>
                                <td class="ps-2"><strong>Untaxed Amount (PKR)</strong></td>
                                <td class="text-end pe-2"><span t-field="o.amount_untaxed_pkr"/></td>
                            </tr>

                            <t t-foreach="o.line_ids.filtered(lambda line: line.tax_line_id)" t-as="tax_line">
                                <tr>
                                    <td class="ps-2">
                                       Taxes <strong t-out="tax_line.tax_line_id.name"/>
                                    </td>
                                    <td class="text-end pe-2">
                                        <span t-field="o.amount_tax_pkr"/>
                                    </td>
                                </tr>
                            </t>

                            <tr class="border-black" style="border-top: 1px solid black !important;">
                                <td class="ps-2"><strong>Total (PKR)</strong></td>
                                <td class="text-end pe-2"><strong><span t-field="o.amount_total_pkr"/></strong></td>
                            </tr>
                        </table>


                    </div>


                </div>
            </t>
            <p class="text-end mt-2" style="font-size: 0.8rem;">
                            <strong>Total amount in words (PKR):</strong><br/>
                            <span class="text-muted" t-field="o.amount_total_words_pkr"/>
            </p>
        </xpath>
    </template>
</odoo>