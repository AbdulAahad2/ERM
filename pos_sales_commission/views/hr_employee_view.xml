<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pos_sale_commission_inherit_hr_employee_form_view" model="ir.ui.view">
            <field name="name">hr.employee.form.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <!-- Add Commission button in button box -->
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" 
                            type="object" 
                            name="action_view_commissions"
                            icon="fa-money"
                            invisible="pos_sale_commission_total == 0">
                        <field name="pos_sale_commission_total" widget="statinfo" string="Commissions"/>
                    </button>
                </div>
                
                <!-- Add Commission fields in notebook -->
                <notebook position="inside">
                    <page string="Point of Sale">
                        <group>
                            <group>
                                <field name="is_commission_applicable" string="Apply Commission"/>
                                <field name="is_veterinarian" string="Is Veterinarian"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <!-- Tree view for better visibility -->
        <record id="pos_sale_commission_inherit_hr_employee_tree_view" model="ir.ui.view">
            <field name="name">hr.employee.tree.view.commission</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <field name="job_id" position="after">
                    <field name="is_commission_applicable" optional="hide"/>
                    <field name="is_veterinarian" optional="hide"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
