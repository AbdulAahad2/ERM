<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Account Move (Vendor Bill) Form View - Add context and show actual_name -->
    <record id="account_move_form_actual_name" model="ir.ui.view">
        <field name="name">account.move.form.actual.name</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add context to product_id field in invoice_line_ids -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='product_id']" position="attributes">
                <attribute name="context">{
                    'show_actual_name': True,
                    'partner_id': parent.partner_id,
                    'default_move_type': parent.move_type,
                    'company_id': parent.company_id
                }</attribute>
            </xpath>

            <!-- Add actual_name field after product_id -->
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='product_id']" position="after">
                <field name="product_actual_name" optional="show" string="Actual Name"/>
            </xpath>
        </field>
    </record>

    <!-- Account Move Line Tree View - Add actual_name column -->
    <record id="account_move_line_tree_actual_name" model="ir.ui.view">
        <field name="name">account.move.line.tree.actual.name</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <!-- Add context to product_id -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="context">{'show_actual_name': True}</attribute>
            </xpath>

            <!-- Add actual_name column -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_actual_name" optional="show" string="Actual Name"/>
            </xpath>
        </field>
    </record>

</odoo>