<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Purchase Order Form View - Add context and show actual_name -->
    <record id="purchase_order_form_actual_name" model="ir.ui.view">
        <field name="name">purchase.order.form.actual.name</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <!-- Add context to product_id field -->
            <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="attributes">
                <attribute name="context">{
                    'show_actual_name': True,
                    'partner_id': parent.partner_id,
                    'quantity': product_qty,
                    'uom': product_uom,
                    'company_id': parent.company_id
                }</attribute>
            </xpath>

            <!-- Add actual_name field display after product_id -->
            <xpath expr="//field[@name='order_line']//field[@name='product_id']" position="after">
                <field name="product_actual_name" optional="show" string="Actual Name"/>
            </xpath>
        </field>
    </record>

    <!-- Purchase Order Line Tree View - Add context and actual_name column -->
    <record id="purchase_order_line_tree_actual_name" model="ir.ui.view">
        <field name="name">purchase.order.line.tree.actual.name</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
        <field name="arch" type="xml">
            <!-- Add context to product_id -->
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="context">{
                    'show_actual_name': True,
                    'partner_id': parent.partner_id,
                    'quantity': product_qty,
                    'uom': product_uom,
                    'company_id': parent.company_id
                }</attribute>
            </xpath>

            <!-- Add actual_name column -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="product_actual_name" optional="show" string="Actual Name"/>
            </xpath>
        </field>
    </record>

    <!-- Purchase Order Line Search View - Update filter domain -->
    <record id="purchase_order_line_search_actual_name" model="ir.ui.view">
        <field name="name">purchase.order.line.search.actual.name</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="attributes">
                <attribute name="filter_domain">['|', '|', '|', ('product_id.actual_name','ilike',self), ('product_id.name','ilike',self), ('product_id.default_code','ilike',self), ('product_id.barcode','ilike',self)]</attribute>
            </xpath>
        </field>
    </record>

</odoo>