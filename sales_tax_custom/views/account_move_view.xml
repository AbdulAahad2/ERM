<odoo>
    <record id="view_tax_submission_wizard_form" model="ir.ui.view">
        <field name="name">tax.submission.wizard.form</field>
        <field name="model">tax.submission.wizard</field>
        <field name="arch" type="xml">
            <form string="Submit Tax">
                <group>
                    <field name="submission_date"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Confirm Submission" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_server_submit_tax" model="ir.actions.server">
        <field name="name">Submit Tax</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
            action = records.action_submit_tax()
        </field>
    </record>

    <record id="view_out_invoice_tree_tax_submission" model="ir.ui.view">
        <field name="name">account.out.invoice.tree.tax.submission</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="tax_is_submitted" widget="boolean_toggle" optional="show"/>
                <field name="tax_submission_status" optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_form_tax_submission_final" model="ir.ui.view">
        <field name="name">account.move.form.tax.submission.final</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <div style="margin-left: -78px;margin-top:10px">
                    <group>
                        <field name="tax_is_submitted"/>
                        <field name="tax_submission_status" readonly="1" force_save="1"/>
                        <field name="tax_submission_date"
                               invisible="not tax_is_submitted"
                               required="tax_is_submitted"/>
                    </group>
                </div>
            </xpath>
        </field>
    </record>
</odoo>