<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_line_lot_tree_inherit_valuation_popup" model="ir.ui.view">
        <field name="name">stock.move.line.lot.tree.inherit.valuation.popup</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_lot_tree"/>
        <field name="arch" type="xml">

            <!-- Anchor that exists in popup -->
            <xpath expr="//field[@name='qty_done']" position="after">
                <field name="unit_cost" readonly="1" optional="show"/>
                <field name="total_valuation" readonly="1" optional="show"/>
            </xpath>

        </field>
    </record>
</odoo>
