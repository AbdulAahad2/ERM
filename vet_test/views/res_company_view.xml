<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Branch Code field to Company Form View -->
    <record id="view_company_form_branch_code" model="ir.ui.view">
        <field name="name">res.company.form.branch.code</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <!-- Add branch_code field after the company name -->
            <field name="name" position="after">
                <field name="branch_code" placeholder="e.g., HT, BK, MD"/>
            </field>
        </field>
    </record>

    <!-- Add Branch Code to Company Tree/List View -->
    <record id="view_company_tree_branch_code" model="ir.ui.view">
        <field name="name">res.company.tree.branch.code</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="branch_code"/>
            </field>
        </field>
    </record>
</odoo>
